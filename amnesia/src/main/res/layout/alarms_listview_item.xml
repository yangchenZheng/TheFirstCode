    <ImageButton
        android:background="@null"
        android:id="@+id/id_alarms_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_perm_group_system_clock"
        android:paddingLeft="16dp"
         />
    <RelativeLayout
        android:id="@+id/id_alarms_item_rl"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/alarms_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/id_alarms_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingTop="14dp">


                <TextView
                    android:id="@+id/id_alarms_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012545"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_alarms_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实例"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>


        <ImageButton
            android:id="@+id/id_delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_delete"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>